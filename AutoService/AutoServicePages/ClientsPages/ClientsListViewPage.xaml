<Page x:Class="AutoService.AutoServicePages.ClientsPages.ClientsListViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoService.AutoServicePages.ClientsPages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title=" " FontFamily="Tw Cen MT">

    <Grid Background="#FFFFFFE1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchTB"
            FontSize="35" Grid.Column="0" Grid.Row="2"   
            Background="White"
            Width="530" Height="65"
            VerticalAlignment="Bottom" Margin="30, 0, 0, 20" HorizontalAlignment="Left" >
            <TextBox.Template>
                <ControlTemplate>
                    <Border CornerRadius="20" BorderBrush="Black" BorderThickness="3" Background="White">
                        <ScrollViewer Margin="10" BorderBrush="White" x:Name="PART_ContentHost" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <Button x:Name="AddClientBTN" Content="Добавить нового клиента"
                FontSize="30" FontWeight="Light"
                Grid.Column="0" Grid.Row="3"
                Width="400" Height="50" Margin="40" VerticalAlignment="Top"
                BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A" Click="AddClientBTN_Click"
                >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="EditCkientBTN" Content="Редактировать"
                FontSize="30" FontWeight="Light"
                Grid.Column="0" Grid.Row="3"
                Width="300" Height="50" Margin="10" VerticalAlignment="Bottom"
                BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
                >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="RemoveClientBTN" Content="Удалить"
                FontSize="30" FontWeight="Light"
                Grid.Column="0" Grid.Row="4"
                Width="300" Height="50" Margin="10" VerticalAlignment="Top"
                BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
                >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <ListView x:Name="ServicesLV" VerticalAlignment="Center"
                  Grid.Column="1" Grid.ColumnSpan="2" 
                  Grid.Row="1" Grid.RowSpan="5"
                  BorderBrush="Black" BorderThickness="2"
                  Width="1200" Height="800" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" BorderBrush="Black" Margin="0" Padding="1">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Beige"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Discount}" Value="0">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>


                        <StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Vertical" Height="450">

                                    <StackPanel Orientation="Horizontal" Width="250" Margin="15 5">
                                        <Image Source="{Binding MainImagePath}" Width="250" Height="250">
                                            <Image.Clip>
                                                <RectangleGeometry RadiusX="130" RadiusY="130" Rect="0,0,250,250"/>
                                            </Image.Clip>
                                        </Image>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Width="250">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition Height="50"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding FirstName}" TextWrapping="Wrap" FontSize="35" Width="250" Height="100"/>
                                            <TextBlock Grid.Row="1" Text="{Binding LastName}" TextWrapping="Wrap" FontSize="35" Width="250" Height="100"/>
                                            <TextBlock Grid.Row="2" Text="{Binding Patronymic}" TextWrapping="Wrap" FontSize="35" Width="250" Height="100"/>
                                            
                                            
                                            <TextBlock Grid.Row="3" Text="{Binding Phone}" TextWrapping="Wrap" FontSize="35" Width="250" Height="100"/>


                                            <Button x:Name="InfoClientBTN" Grid.Row="3" Content="i"
                                                    HorizontalAlignment="Right"
                                                    Width="45" Height="45" Margin="20 0 0 0" FontSize="30"                
                                                    BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A" 
                                                    >
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="20"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="CountRecordTBL" Text=""
                   Grid.Column="2" Grid.Row="4"
                   FontSize="35"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="400, 0, 0, 0"/>
    </Grid>
</Page>
