<Page x:Class="AutoService.AutoServicePages.VisitRegistrationPages.VisitRegViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoService.AutoServicePages.VisitRegistrationPages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title=" " FontFamily="Tw Cen MT">

    <Grid Background="#FFFFFFE1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchTB"
           FontSize="35" Grid.Column="0" Grid.Row="2"   
           Background="White"
           Width="530" Height="65"
           VerticalAlignment="Bottom" Margin="30, 0, 0, 20" HorizontalAlignment="Left" >
            <TextBox.Template>
                <ControlTemplate>
                    <Border CornerRadius="20" BorderBrush="Black" BorderThickness="3" Background="White">
                        <ScrollViewer Margin="10" BorderBrush="White" x:Name="PART_ContentHost" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <Viewbox Grid.Column="0" Grid.Row="3" Grid.RowSpan="2"
        Width="250" Height="210"
        VerticalAlignment="Top"
        Margin="0 10 280 0">
                    <Calendar Name="EventCalendar"   
        SelectionMode="MultipleRange" FontSize="100"
                      />
        </Viewbox>



        <Button x:Name="LargerBTN" Content="⬆"
               FontSize="50" FontWeight="Light"
               Grid.Column="0" Grid.Row="3"
               Width="70" Height="70" Margin="180 60 0 0" VerticalAlignment="Top"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="LessBTN" Content="⬇"
               FontSize="50" FontWeight="Light"
               Grid.Column="0" Grid.Row="3"
               Width="70" Height="70" Margin="350 60 0 0" VerticalAlignment="Top"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="ResetBTN" Content="Очистить ❌"
               FontSize="30" FontWeight="Light"
               Grid.Column="0" Grid.Row="3"
               Width="250" Height="50" Margin="250 0 0 3" VerticalAlignment="Bottom"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A" 
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="AddVistBTN" Content="Добавить новую запись"
               FontSize="30" FontWeight="Light"
               Grid.Column="0" Grid.Row="4"
               Width="400" Height="50" Margin="40" VerticalAlignment="Top"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A" 
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="EditVisitBTN" Content="Редактировать"
               FontSize="30" FontWeight="Light"
               Grid.Column="0" Grid.Row="4"
               Width="300" Height="50" Margin="10" VerticalAlignment="Bottom"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="PDFBTN" Content="PDF "
               FontSize="30" FontWeight="Light"
               Grid.Column="0" Grid.Row="5"
               Width="130" Height="50" Margin="0 10 300 0" VerticalAlignment="Top"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="WORDBTN" Content="WORD"
               FontSize="30" FontWeight="Light"
               Grid.Column="0" Grid.Row="5"
               Width="130" Height="50" Margin="10" VerticalAlignment="Top"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="EXCELBTN" Content="EXCEL"
               FontSize="30" FontWeight="Light"
               Grid.Column="0" Grid.Row="5"
               Width="130" Height="50" Margin="300 10 0 0" VerticalAlignment="Top"
               BorderBrush="Black" BorderThickness="3" Background="#FFFF9C1A"
               >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <ListView x:Name="NearestSCLV" VerticalAlignment="Center"
                 Grid.Column="1" Grid.ColumnSpan="2" 
                 Grid.Row="1" Grid.RowSpan="5"
                 BorderBrush="Black" BorderThickness="2"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 Width="1200" Height="800" d:ItemsSource="{d:SampleData ItemCount=15}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" BorderBrush="Black" Margin="5" Padding="1">

                        <StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"  Height="150">
                                    <StackPanel Orientation="Vertical" Width="1150">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50"/>
                                                <RowDefinition Height="50"/>
                                                <RowDefinition Height="50"/>
                                            </Grid.RowDefinitions>


                                            <TextBlock Grid.Row="0" Text="{Binding Service.Title}" TextWrapping="Wrap" FontSize="35" Width="1100" Height="50" Margin="20, 0"/>

                                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="20, 0, 0, 0" Width="1100">
                                                <TextBlock Text="{Binding Client.FirstName}" TextWrapping="Wrap" FontSize="30" Height="50" Margin="0, 0, 10, 0"/>
                                                <TextBlock  Text="{Binding Client.LastName}" TextWrapping="Wrap" FontSize="30" Height="50" Margin="0, 0, 10, 0" />
                                                <TextBlock FontSize="30" Text="{Binding Client.Patronymic}" Height="50" TextWrapping="Wrap" Margin="0, 0, 10, 0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="20, 0, 0, 0" Width="1100">
                                                <TextBlock Text="{Binding Client.Email}" TextWrapping="Wrap" FontSize="30" Height="50" Margin="0, 0, 10, 0"/>
                                                <TextBlock  Text="{Binding Client.Phone}" TextWrapping="Wrap" FontSize="30" Height="50" Margin="0, 0, 10, 0" />
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="20, 0" HorizontalAlignment="Right"  Width="200">
                                                <TextBlock Text="{Binding StartTime, StringFormat = dd.MM.yyyy HH:mm}" TextWrapping="Wrap" FontSize="30" Height="50" Margin="0, 0, 10, 0"/>
                                            </StackPanel>

                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="CountRecordTBL" Text=""
                  Grid.Column="2" Grid.Row="4"
                  FontSize="35"
                  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="400, 0, 0, 0"/>
    </Grid>
</Page>
